<div class="intro-home">
  <%= image_tag "cade_o_tio_circulo_preto.png",  class: "logo-home" %>
</div>

<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4 col-sm-offset-4">
      <div class="home-itens">
        <div class="secundary__buttons">
          <%= link_to new_itinerary_student_path(@itinerary, @student), class: "secondary__button" do %>
            <i class="fas fa-user-plus" style="font-size: 2.5rem; margin-left: .7rem"></i>
            <p class="m-0" style="font-size: 1.2rem">Criança</p>
          <% end %>
          <%= link_to itinerary_students_path(@itinerary), class: "tertiary__button" do %>
            <i class="fas fa-edit" style="font-size: 2.5rem; margin-bottom: .5rem; margin-left: .5rem"></i>
            <p style="margin: 0; font-size: 1.2rem">Editar itinerário</p>
          <% end %>
        </div>
        <%= link_to itinerary_path(@itinerary), class: "primary__button" do %>
          <i class="fas fa-map-marked-alt" style="font-size: 50px; margin: 10px 5px 25px 9px"></i>
          <p class="m-0">Visualizar itinerário</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
