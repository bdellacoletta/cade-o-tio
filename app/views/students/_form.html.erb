<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4 col-sm-offset-4">
      <div class="intro">
        <h1 class="title-form">Cade o tio?</h1>
        <%= image_tag "cade_o_tio_circulo_preto.png",  class: "logo-form" %>
      </div>


      <div class="form-child">
        <%= simple_form_for @student do |f| %>
        <%= f.input :child_name, label: 'Nome da criança' %>
        <%= f.input :child_address, label: 'Endereço da criança', input_html: { data: { geocoder_target: "address" }, class:"d-none" },
                    wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
        <%= f.input :position, label: 'Sequência' %>
        <%= f.input :parents_name, label: 'Nome do(a) responsável' %>
        <%= f.input :parents_email, label: 'E-mail do(a) responsável' %>
        <%= f.button :submit, value: 'Enviar', class: 'submit-button' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
