<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12">
      <div id="logo-placeholder" class="mt-3 align-items-center">Logo</div>
      <h1>Crianças</h1>
      <div  class="cards-student-index"
            data-controller='sequence studentinfo'
            data-sequence-url="/students/:id/move">
        <% @students.each do |student| %>
          <%= link_to @student_path,  class: 'student-index-link mb-3',
                                      data: { id: student.id }  do %>
            <div class="card-product-student-index mb-3"
            data-action="click->studentinfo#revealContent"
            data-id="<%= student.id %>">

              <div class="card-product-infos-student d-flex p-1">
                <img class="shadow m-1" src="https://images.unsplash.com/photo-1629872430082-93d8912beccf">
                <div class="card-product-infos-student-index">
                  <h2><%= student.child_name %></h2>
                  <p><%= student.child_address %></p>
                </div>
              </div>
            <div class="students-info static">
            </div>
              <ul class="d-none" data-studentinfo-target="content"
                                data-id="<%= student.id %>">
                <li><p>Nome: <%= student.child_name %></p></li>
                <li><p>Endereço: <%= student.child_address %></p></li>
                <li><p>Responsável: <%= student.parents_name %></p></li>
                <li><p>Email: <%= student.parents_email %></p></li>
                <%= link_to 'Editar', student_path(student), class: 'btn btn-warning btn-student' %>
              </ul>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="d-flex justify-content-center">
        <%= link_to 'Gerar itinerário', itinerary_path(@itinerary), class: 'btn btn-primary my-3' %>

      </div>
    </div>
  </div>
</div>
